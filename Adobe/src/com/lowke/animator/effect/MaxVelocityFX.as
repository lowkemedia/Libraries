        public static const PRECEDENCE_LATER:int    = Animator.PRECEDENCE_LATER;        public static const INTERVAL_NONE:uint      = Animator.INTERVAL_NONE;                        public function MaxVelocityFX(maxVelocity:Number)         {               super("MaxVelocityFX", TYPE_PERSIST, PRECEDENCE_LATER, INTERVAL_NONE);                        _maxVelocity  = maxVelocity;        }                        public override function activate():void         {               if (_target is VelocityXYFX)             {                _velocityTarget = _target as VelocityXYFX;            }             else             {                _velocityTarget = _anime.getEffect("Velocity") as VelocityXYFX;                if (! _velocityTarget)                 {                    throw new Error("MaxVelocityFX effect needs a Velocity effect as a target");                }            }        }                        public override function update():Boolean         {               if (_velocityTarget)             {                if (_velocityTarget.vel.length > _maxVelocity)                 {                    var angle:Number = NumberUtil.vectorToAngle(_target["vel"]);                    _velocityTarget.vel = NumberUtil.angleToVector(angle, _maxVelocity);                }            }            return false;        }                public function get maxVelocity():Number { return _maxVelocity; }    }}